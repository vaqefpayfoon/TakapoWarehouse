@model IngredientsWarehouse

@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">ویرایش قطعه</h2>
<br />

<form method="post" asp-action="Edit" class="col-12">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Srl" type="hidden" class="form-control" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IngredientsName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="IngredientsName" class="form-control" />
            </div>
            <span asp-validation-for="IngredientsName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="GoodsModel" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="GoodsModel" class="form-control" />
            </div>
            <span asp-validation-for="GoodsModel" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PartNo" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="PartNo" class="form-control" />
            </div>
            <span asp-validation-for="PartNo" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="StockIngredients" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="StockIngredients" class="form-control" />
            </div>
            <span asp-validation-for="StockIngredients" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SerialNo" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SerialNo" class="form-control" />
            </div>
            <span asp-validation-for="SerialNo" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Barcode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Barcode" class="form-control" />
            </div>
            <span asp-validation-for="Barcode" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <button asp-action="Edit" class="btn btn-info form-control">ذخیره</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">بازگشت</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}