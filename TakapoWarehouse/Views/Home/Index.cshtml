@{
    ViewData["Title"] = "Home Page";
}

<div class="col-12 border p-3">

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>نام قطعه</th>
                <th>مدل</th>
                <th>PartNo</th>
                <th>تعداد</th>
                <th>آدرس</th>
                <th>بارکد</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#DT_load').DataTable({
                "ajax": {
                    "url": "/api/warehouse",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ingredientsName", "autoWidth": true },
                    { "data": "model", "autoWidth": true },
                    { "data": "partNo", "autoWidth": true},
                    { "data": "qty", "autoWidth": true },
                    { "data": "stockIngredients", "autoWidth": true },
                    { "data": "barcode", "autoWidth": true },
                    {
                        "data": "srl",
                        "render": function (data) {
                            return `<div class="text-center">
                        <a href="/Home/Edit?srl=${data}" class='btn btn-success text-white' style='cursor:pointer; width:70px;'>
                            Edit
                        </a>
                        &nbsp;
                        <a class='btn btn-danger text-white' style='cursor:pointer; width:70px;'
                            onclick=Delete('/api/warehouse?srl='+${data})>
                            Delete
                        </a>
                        </div>`;
                        }, "width": "15%"
                    }
                ],
                "language": {
                    "emptyTable": "سعید دیتا نداری"
                },
                "width": "100%"
            });
        }

        function Delete(url) {
            swal({
                title: "ایا مطمئن هستید?",
                text: "سعید این اگه پاک بشه بر نمی گرده ها",
                icon: "اخطار",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: url,
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                dataTable.ajax.reload();
                            }
                            else {
                                toastr.error(data.message);
                            }
                        }
                    });
                }
            });
        }
    </script>
}
