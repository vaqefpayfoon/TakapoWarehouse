@{
    ViewData["Title"] = "Home Page";
}

<div class="col-12 border p-3 text-right" style="direction: rtl">
    <p>
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp;  جدید </a>
    </p>
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>نام قطعه</th>
                <th>مدل</th>
                <th>PartNo</th>
                <th>آدرس</th>
                <th>بارکد</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script>
        var dataTable;

        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#DT_load').DataTable({
                "ajax": {
                    "url": "/api/warehouse",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ingredientsName", "autoWidth": true },
                    { "data": "goodsModel", "autoWidth": true },
                    { "data": "partNo", "autoWidth": true},
                    { "data": "stockIngredients", "autoWidth": true },
                    { "data": "barcode", "autoWidth": true },
                    {
                        "data": "srl",
                        "render": function (data) {
                            return `<div class="text-center">
                        <a href="/Home/Edit?srl=${data}" class='btn btn-success text-white' style='cursor:pointer; width:70px;'>
                            <i class="fas fa-edit"></i>
                        </a>
                        &nbsp;
                        <a class='btn btn-danger text-white' style='cursor:pointer; width:70px;'
                            onclick=Delete('/api/warehouse?srl='+${data})>
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        </div>`;
                        }, "width": "15%"
                    }
                ],
                "language": {
                    "emptyTable": "سعید دیتا نداری",
                    "lengthMenu": "نمایش _MENU_ قطعات در صفحه",
                    "zeroRecords": "قطعه ای پیدا نشد",
                    "info": "نمایش صفحه _PAGE_ از _PAGES_",
                    "infoEmpty": "قطعه پیدا نشد",
                    "infoFiltered": "(جستجو از _MAX_ کل قطعات)",
                    "sSearch": "جستجو",
                    "oPaginate": {
                        "sFirst": "اولی",
                        "sPrevious": "قبلی",
                        "sNext": "بعدی",
                        "sLast": "آخری"
                    },
                    "sLoadingRecords": "بارگذاری ...",
                    "sProcessing": "بارگذاری ...",
                    "sLengthMenu": "نمایش _MENU_ قطعات در صفحه",
                },
                "width": "100%"
            });
        }

        function Delete(url) {
            swal({
                title: "ایا مطمئن هستید?",
                text: "سعید این اگه پاک بشه بر نمی گرده ها",
                icon: "اخطار",
                buttons: true,
                dangerMode: true
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "DELETE",
                        url: url,
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                                dataTable.ajax.reload();
                            }
                            else {
                                toastr.error(data.message);
                            }
                        }
                    });
                }
            });
        }
    </script>
}
